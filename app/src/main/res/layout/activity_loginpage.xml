<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginpage">

   <LinearLayout
       android:id="@+id/one"
       android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:orientation="vertical"
        android:background="@android:color/white"
      android:padding="23dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Facegram"
            android:textSize="45dp"
            android:fontFamily="@font/fontstyle"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
           android:textAlignment="center"

            android:textColor="@android:color/black"></TextView>
       <EditText
           android:id="@+id/user"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Username"
           android:textColorHint="@android:color/darker_gray"
           android:fontFamily="@font/fontstyle2"
           android:textStyle="bold"
           android:inputType="text"
           android:textColor="@android:color/black"
           android:background="@drawable/boxround"
           android:layout_marginTop="8dp"
           android:textSize="12dp"
           android:padding="10dp"/>
       <EditText
           android:id="@+id/password"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="Password"
           android:textColorHint="@android:color/darker_gray"
           android:fontFamily="@font/fontstyle2"
           android:textStyle="bold"
           android:inputType="textPassword"
           android:textColor="@android:color/black"
           android:background="@drawable/boxround"
           android:layout_marginTop="8dp"
           android:textSize="12dp"
           android:padding="10dp"/>
       <Button
           android:id="@+id/button1"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="Log In"
           android:textSize="12dp"
           android:textColor="@android:color/white"
           android:fontFamily="@font/fontstyle2"
           android:background="@drawable/btnround"

          android:textStyle="bold"
           android:layout_marginTop="15dp"/>
   </LinearLayout>

       <LinearLayout
           android:id="@+id/two"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           android:layout_below="@+id/one"
           android:layout_centerHorizontal="true">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Forgot your login details?"
           android:textAlignment="center"

           />
           <TextView
               android:id="@+id/button2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Get help logging in."
               android:layout_marginLeft="5dp"
               android:textColor="#1877F2"

               android:textStyle="bold"/>

       </LinearLayout>
<LinearLayout
    android:id="@id/three"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_below="@id/two"
    android:layout_centerHorizontal="true"
   >
    <View
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="18.5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="18dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:padding="5dp"
        android:textColor="@color/purple_700"
       />

    <View
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="18.5dp"/>


</LinearLayout>
       <LinearLayout
           android:id="@+id/four"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:orientation="horizontal"
           android:layout_gravity="center"
           android:layout_below="@+id/three"
           android:layout_centerHorizontal="true">
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:background="@drawable/socialicon"
               />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Log in with Facebook"
               android:layout_marginTop="9dp"
               android:textColor="#295396"
               android:textStyle="bold"
               android:textSize="17dp"
               android:textAlignment="center"

               />


       </LinearLayout>
    <LinearLayout
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_below="@+id/four"
        android:layout_marginTop="216dp">
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@android:color/darker_gray"

    />
    </LinearLayout>
<LinearLayout
    android:id="@+id/six"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true"
    android:padding="10dp"
    android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have an account?"></TextView>
    <TextView
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up."
        android:layout_marginLeft="5dp"
        android:textColor="#1877F2"
        android:textStyle="bold"></TextView>
</LinearLayout>



</RelativeLayout>